{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block css %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	<link href="{{ asset('css/styleLogin.css') }}" rel="stylesheet">
	<script type="module" src="js/animation.js"></script>
{% endblock %}

{% block body %}
	<div class="container-canvas">
		<canvas id="canvas"></canvas>
	</div>
	<section class="container d-flex align-items-center py-4 z-index-2">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}
			<div class="main-card mx-auto text-center border rounded-4 py-5">
				<img src="img/ab844b1c0ec9bdeb90ab2cfc0b7f2c99-removebg-preview.png" class="img-fluid w-25" alt="...">
				<div class="conteneur col-lg-offset-3 col-lg-6">
					<h1 style="font-family: quicksand; font-weight: 600;" class="fs-4" >MyDigital Christmas</h1>
					<form class="well">
						<div class="form-group">
							<label class="pb-2" for="inputEmail" style="font-family: quicksand;" >Email MyDigitalSchool</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control border-0" autocomplete="email" required="required" autofocus="autofocus">
						</div>
						<div class="form-group">
							<label class="pb-1" for="inputPassword" style="font-family: quicksand;">Mot de passe</label>
							<input type="password" name="password" id="inputPassword" class="form-control border-0" autocomplete="current-password" required="required">
							<button class="btn btn-lg btn-primary rounded-pill w-50 border-0 fs-6" type="submit" style="font-family: quicksand;">Connexion</button>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						</div>
					</form>
				</div>
			</div>
		</section>

		{#
									        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
									        See https://symfony.com/doc/current/security/remember_me.html
									
									        <div class="checkbox mb-3">
									            <label>
									                <input type="checkbox" name="_remember_me"> Remember me
									            </label>
									        </div>
									    #}

	{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block css %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="{{ asset('css/styleRegister.css') }}" rel="stylesheet">
  <script type="module" src="js/animation.js"></script>
{% endblock %}

{% block body %}
  <div class="container-canvas">
		<canvas id="canvas"></canvas>
	</div>
  <div class="register">
    {% for flash_error in app.flashes('verify_email_error') %}
      <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="main-card">
      <img src="img/ab844b1c0ec9bdeb90ab2cfc0b7f2c99-removebg-preview.png" class="img-fluid" alt="...">
      <h1 style="font-family: quicksand; font-weight: 600;" >S'inscrire Ã  MyDigital Christmas</h1>
      <div class="conteneur col-lg-offset-3 col-lg-7" style="font-family: quicksand;">

        {{ form_start(registrationForm, {'attr': {'class': 'well'}}) }}
        <div class="form-group">
          {{ form_row(registrationForm.email, {'attr': {'class': 'form-control border-0 pb-1'}}) }}
        </div>
        <div class="form-group">
          {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control border-0'}}) }}
          <div class="d-flex justify-content-center">
            <button class="btn btn-lg btn-primary rounded-pill fs-6" type="submit" style="font-family: quicksand;">S'inscrire !</button>
          </div>

          {{ form_end(registrationForm) }}
        </div>

      </div>

    </div>
  </div>
{% endblock %}

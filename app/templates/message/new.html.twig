  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="{{ asset('css/styleNew.css') }}" rel="stylesheet">
  <script type="module" src="js/animation.js"></script>
{% endblock %}
{% block body %}

{% if app.user %}
    <h1>Create new Message</h1>
{% if app.user.isVerified == '0' %}
    <p>Confirme ton email bg</p>
{% endif %}

{% if app.user.isVerified == '1' %}
    {{ include('message/_form.html.twig') }}
    <a href="{{ path('app_message_index') }}">back to list</a>
    {% endif %}
{% endblock %}
